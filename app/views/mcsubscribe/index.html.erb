<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Sign Up Today</h2>
                <h3>Tell us why you're ready for the final frontier.</h3>
                <hr class="primary">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
              <%= form_tag('/mcsubscribe/subscribe', method: "post", id: "mcsubscribe", remote: "true") do %>
                <div class="form-group">
                  <%= email_field(:email, :address, {id: "email", placeholder: "email address", class: 'form-control'}) %>
                  <%= submit_tag("Subscribe", :class=>"btn btn-default") %>
                </div>
              <% end %>
            </div>
        </div>
    </div>
</section>

<aside class="bg-dark">
    <div class="container text-center">
        <div class="call-to-action">
            <p>Copyright 2015 Campus Perks</p>
